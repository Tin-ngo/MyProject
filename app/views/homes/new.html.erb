<h1>New homes => New Users => đăng ký</h1>
<div id="viewport">
  <div class="container-fluid" id="noidung">

<h1>New User</h1>
  <%= form_with model: @DK do |form| %>
    <div>
     <%= form.label :username %><br>
      <%= form.text_field :username %>

     <% @DK.errors.full_messages_for(:username).each do |message| %>
       <div><%= message %></div>
       <% end %>
  </div>
   <div>
      <%= form.label :password %><br>
      <%= form.text_area :password %>
      <% @DK.errors.full_messages_for(:password).each do |message| %>
       <div><%= message %></div>
      <% end %>
    </div>
   <div>
     <%= form.submit %>
   </div>
  <% end %>
</div>
</div>