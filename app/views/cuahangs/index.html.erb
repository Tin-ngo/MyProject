<%= render "layouts/header", home: @home %>

<h3 style="text-align: center; padding: 50px;">Tất cả sản phẩm</h1>

<div class="row box-wrap">
<% @product_all.each do |product| %>
	<div class="col-sm-2 box">
		<div style="width: 100%;">
			<%= image_tag(product.image, style: 'width:200px; height: 200px;') %>
			<p><%= product.name %></p>
		</div>
	</div>
 <% end %>	
</div>

<%= render "layouts/footer", home: @home %>

