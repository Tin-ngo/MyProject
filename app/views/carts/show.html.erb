<%= render "layouts/header", home: @home %>

<h2 class="text-center" style="padding: 20px;">Giỏ hàng</h2>
<div class="container"> 
 <table id="cart" class="table table-hover table-condensed"> 
  <thead> 
   <tr> 
    <th style="width:50%">Tên sản phẩm</th> 
    <th style="width:10%">Giá</th> 
    <th style="width:8%">Số lượng</th> 
    <th style="width:22%" class="text-center"></th> 
    <th style="width:10%"> </th> 
   </tr> 
  </thead> 
  <tbody><tr> 
   <td data-th="Product"> 
    <div class="row"> 
     <div class="col-sm-2 hidden-xs">
     	<%= image_tag(@product.image, style: 'width:100px; height: 100px;') %>
     </div> 
     <div class="col-sm-10"> 
      <h4 class="nomargin"><%= @product.name %></h4> 
      <p><%= @product.mota %></p> 
     </div> 
    </div> 
   </td> 
   <td data-th="Price"><%= @product.dongia %></td> 
   <td data-th="Quantity">
   		<input class="form-control text-center" value="<%= i = 1 %>" type="number">
   </td> 
   <td data-th="Subtotal" class="text-center"></td> 
   <td class="actions" data-th="">

    <button class="btn btn-danger btn-sm">
    	<a href="/cuahangs"><i class="fa fa-trash" aria-hidden="true"></i></a>
    </button>
   </td> 
  </tr> 
   
  
   <tr> 
    <td><a href="/cuahangs" class="btn btn-warning"><i class="fa fa-angle-left"></i> Tiếp tục mua hàng</a>
    </td> 
    <td colspan="2" class="hidden-xs"> </td> 
    <td class="hidden-xs text-center">
    </td> 
    <td>
        <% if current_user %>
        <a href="/carts/new?id=<%= @product.id %>&soluong=<%= i %>&dongia=<%= @product.dongia %>" class="btn btn-success btn-block">Xác nhận <i class="fa fa-angle-right"></i></a>
        <% else %>
        <a href="/users/sign_in" class="btn btn-success btn-block">Xác nhận <i class="fa fa-angle-right"></i></a>
        <% end %>
    </td> 
   </tr> 
  </tfoot> 
 </table>
</div>












<%= render "layouts/footer", home: @home %>




